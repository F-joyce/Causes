@model List<Causes.Models.Cause>

@{
    ViewBag.Title = "List Causes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List causes</h2>

<p>
    
    @Html.ActionLink("Create New Cause", "New", "Causes")

</p>

<table class="table table-striped">
    <tr class="tab-pane">
        <th>
            Title
        </th>
        <th>
            Topic
        </th>
        <th>
            Created by
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="tab-content">
        <td>
            @Html.DisplayFor(c => item.Title)
        </td>
        <td>
            @Html.DisplayFor(c => item.CauseTypeName)
        </td>
        <td>
            @Html.DisplayFor(c => item.CreatorName)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", "Causes", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Back to home", "Index", "Home")
</p>
